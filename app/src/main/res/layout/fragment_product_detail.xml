<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootProductDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3000000"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!-- Ventana central -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_dialog_rounded"
        android:padding="20dp"
        android:elevation="12dp"
        android:gravity="center_horizontal"
        android:clickable="true"
        android:focusable="true">

        <!-- Botón de cerrar en la esquina superior derecha -->
        <ImageView
            android:id="@+id/btnCloseDialog"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_close"
            android:contentDescription="Cerrar"
            app:tint="#6D4C41"
            android:layout_marginBottom="8dp"/>

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/imageProductDetail"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginBottom="12dp"
            android:contentDescription="Imagen producto"
            android:background="@drawable/bg_image_rounded"
            android:clipToOutline="true"/>

        <!-- Nombre -->
        <TextView
            android:id="@+id/textProductNameDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Producto"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#3E2723"
            android:gravity="center"
            android:layout_marginTop="8dp"/>

        <!-- Categoría -->
        <TextView
            android:id="@+id/textProductCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoría"
            android:textSize="14sp"
            android:textColor="#8D6E63"
            android:gravity="center"
            android:layout_marginTop="4dp"/>

        <!-- Precio -->
        <TextView
            android:id="@+id/textProductPriceDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#6D4C41"
            android:gravity="center"
            android:layout_marginTop="8dp"/>

        <!-- Descripción -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/textProductDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción completa..."
                android:textColor="#4E342E"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:textSize="14sp"
                android:padding="4dp"/>
        </ScrollView>

    </LinearLayout>
</FrameLayout>
