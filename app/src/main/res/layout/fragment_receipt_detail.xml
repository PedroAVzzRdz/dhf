<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- Contenedor tipo ventana -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_receipt_detail"
        android:padding="20dp"
        android:elevation="12dp"
        android:clipToPadding="false"
        android:gravity="center_horizontal">

        <!-- Botón cerrar (arriba a la derecha) -->
        <ImageView
            android:id="@+id/btnCloseDialog"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_close"
            android:contentDescription="Cerrar"
            app:tint="#6D4C41"
            android:padding="4dp" />

        <!-- Encabezado con ícono decorativo -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_receipt"
                android:contentDescription="Icono recibo"
                app:tint="#6D4C41"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalles del pedido"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#4E342E" />
        </LinearLayout>

        <!-- Scroll de contenido -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <!-- Usuario -->
                <TextView
                    android:id="@+id/tvDetailUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del usuario"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="#4E342E"
                    android:layout_marginBottom="2dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvDetailUserEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="correo@ejemplo.com"
                    android:textColor="#5D4037"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center" />

                <!-- Línea divisoria -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0C097"
                    android:layout_marginBottom="12dp" />

                <!-- Fechas -->
                <TextView
                    android:id="@+id/tvDetailRequestDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pedido: 12/10/2025"
                    android:textColor="#3E2723"
                    android:layout_marginBottom="6dp"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tvDetailEstimated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Llegará aprox.: 14/10/2025"
                    android:textColor="#3E2723"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp" />

                <!-- Ubicación -->
                <TextView
                    android:id="@+id/tvDetailLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dirección: Calle ejemplo #123, Ciudad"
                    android:textColor="#3E2723"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp" />

                <!-- Productos -->
                <TextView
                    android:id="@+id/tvDetailItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Productos:"
                    android:textStyle="bold"
                    android:textColor="#4E342E"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp" />

                <!-- Total -->
                <TextView
                    android:id="@+id/tvDetailTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total: $0.00"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="#4E342E"
                    android:layout_marginTop="8dp"
                    android:gravity="center"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
